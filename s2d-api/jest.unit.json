{
  "preset": "ts-jest",
  "coverageDirectory": "./coverage",
  "testMatch": [
    "**/?(*.)+(spec).ts"
  ],
  "resetMocks": true,
  "clearMocks": true,
  "setupFiles": [
    "<rootDir>/scripts/test-setup.ts"
  ],
  "moduleDirectories": [
    "node_modules",
    "src"
  ],
  "moduleNameMapper": {
    "^@features/(.*)$": "<rootDir>/src/features/$1",
    "^@common/(.*)$": "<rootDir>/src/common/$1"
  },
  "testTimeout": 20000
}