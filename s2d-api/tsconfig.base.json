{
  "compilerOptions": {
    "lib": [
      "es5",
      "es6"
    ],
    "module": "CommonJS",
    "esModuleInterop": true,
    "target": "ES6",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": false,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "baseUrl": "./src",
    "rootDir": "src",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "strictNullChecks": true
  },
}